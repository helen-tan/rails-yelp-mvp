<p id="notice"><%= notice %></p>

<div class="row justify-content-center">
  <div class="card w-75 justify-content-center">
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <p class="card-text"><strong>Name: </strong><%= @restaurant.name %></p>
      <p class="card-text"><strong>Category: </strong><%= @restaurant.category %></p>
      <p class="card-text"><strong>Address: </strong><%= @restaurant.address %></p>
      <p class="card-text"><strong>Phone number: </strong><%= @restaurant.phone_number %></p>

      <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
      <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
    </div>
  </div>
</div>

<h2>Reviews</h2>

<% @restaurant.reviews.each do |review| %>
  <ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= review.content %>
      <span class="badge bg-primary rounded-pill"><%= review.rating %></span>
    </li>
  </ul>
<% end %>


